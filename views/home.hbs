<div class='container m-6'>
  <div class='columns'>
    <div class='column'>
      <h1 class='title is-4'>To Do List</h1>
      <div class='card mt-6'>
        <div class='card-content'>
          <div class='content'>

            <table class='table'>
              <thead>
                <tr>
                  <th>#</th>
                  <th>Title</th>
                  <th>Description</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                {{#each todos}}
                  <tr>
                    <th>{{this.id}}</th>
                    <td>{{this.title}}</td>
                    <td>{{this.description}}</td>
                    <td><a
                        href='http://localhost:3000/todo-delete/{{this.id}}'
                      >Delete</a></td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>